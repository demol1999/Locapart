# Configuration de sécurité
JWT_SECRET_KEY=your-super-secret-jwt-key-here-minimum-32-characters

# Configuration de la base de données
DATABASE_URL=mysql+pymysql://maria_user:monpassword@localhost/locappart_db

# Configuration JWT
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Environnement
ENVIRONMENT=development

# Configuration OAuth Google
# Obtenir depuis https://console.developers.google.com/
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Configuration OAuth Facebook  
# Obtenir depuis https://developers.facebook.com/
FACEBOOK_CLIENT_ID=your_facebook_app_id_here
FACEBOOK_CLIENT_SECRET=your_facebook_app_secret_here

# Configuration OAuth Microsoft
# Obtenir depuis https://portal.azure.com/ (Azure App registrations)
MICROSOFT_CLIENT_ID=your_microsoft_app_id_here
MICROSOFT_CLIENT_SECRET=your_microsoft_app_secret_here
MICROSOFT_TENANT_ID=common

# Configuration Stripe
# Obtenir depuis https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
STRIPE_PREMIUM_PRICE_ID=price_your_premium_price_id_here

# ==================== EMAIL VERIFICATION ====================
# Configuration pour l'envoi d'emails de vérification
# Choisir UN des providers ci-dessous:

# 1. RESEND (Recommandé - gratuit jusqu'à 3000 emails/mois)
# Obtenir depuis https://resend.com/api-keys
RESEND_API_KEY=re_your_resend_api_key_here

# 2. MAILGUN (Alternative - gratuit jusqu'à 5000 emails/mois)
# Obtenir depuis https://app.mailgun.com/app/account/security/api_keys
# MAILGUN_API_KEY=your_mailgun_api_key_here
# MAILGUN_DOMAIN=your_mailgun_domain_here

# 3. SMTP (Si vous avez votre propre serveur SMTP)
# SMTP_HOST=smtp.your-provider.com
# SMTP_PORT=587
# SMTP_USERNAME=your_smtp_username
# SMTP_PASSWORD=your_smtp_password
# SMTP_TLS=true

# Configuration commune pour tous les providers
EMAIL_FROM=noreply@locapart.com
EMAIL_FROM_NAME=LocAppart
EMAIL_PROVIDER=resend