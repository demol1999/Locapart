# Variables d'environnement pour la sécurité
# ATTENTION: Ne jamais commiter le vrai .env avec les vraies valeurs !

# Base de données
DATABASE_URL=mysql+pymysql://username:password@localhost/database_name

# JWT Secret (générer une clé forte)
JWT_SECRET_KEY=your-super-secret-jwt-key-here-minimum-32-chars

# OAuth Secrets
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
FACEBOOK_CLIENT_ID=your-facebook-client-id
FACEBOOK_CLIENT_SECRET=your-facebook-client-secret
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
MICROSOFT_TENANT_ID=your-microsoft-tenant-id

# Email Service
EMAIL_PROVIDER=resend  # ou smtp, sendgrid, mailgun
RESEND_API_KEY=your-resend-api-key
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=your-smtp-username
SMTP_PASSWORD=your-smtp-password

# Rate Limiting (optionnel)
REDIS_URL=redis://localhost:6379/0

# Environment
ENVIRONMENT=development  # ou production

# Stripe (pour les paiements)
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# Sécurité additionnelle
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com
SECURE_COOKIES=false  # true en production avec HTTPS

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR